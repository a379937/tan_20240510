<html>
	<head>
	<style>
	
	button{
	padding:0;
	}
	.start{
	padding-left:10;
	padding-right:10;
	padding-top:2;
	padding-bottom:2;
	font-size:20px;
	}
	.rs{
	margin-left:100;
	}
	.res{
	height:0;
	}
	
	body{
	text-align: center;
	}
	
	</style>
	
	     <script>

            var pics_src = new Array("./j001.jpg","./j002.jpg","./j003.jpg");
            
            var num = 0;
            
            var flag = false;

 
            function jyanken(){
                
                if(!flag){
                    return;
                }
            
                if (num == 3) {
                    num = 0;
                }
                
                var element = document.getElementById("mypic");
                
                element.src = pics_src[num];
                
                num++;
                
                setTimeout("jyanken()",20);
                
                
            }

            function start(){
               flag = true;
               rs.innerText="";
               show(0);
               jyanken();
            }
            
            function stop(i){
               
               var rs = document.getElementById("rs");
               if(flag){
               show(i);
               if(i==num){
               rs.innerText="even";
               }
               if(i==(num-1)||i==(num+2)){
               rs.innerText="win";
               }
                if(i==(num+1)||i==(num-2)){
               rs.innerText="lose";
               }
               }
               flag = false;
            }
            
			function show(i){
			if(i==0){
			for(var j = 1;j<=3;j++){
			var img = document.getElementById(j);
			img.style.borderStyle="";
			
			}
			}
			else{
			for(var j = 1;j<=3;j++){
			if(i==j){
			var img = document.getElementById(j);
			img.style.borderStyle="dotted";
			}}
			}
			}

            
         </script>
	</head>
    <body>
  
        <img id="mypic"  src="j001.jpg" width="400" height="300">
        
        <br/>
        
        <button onclick="stop(1)" id="1"><img id="pa"  src="j001.jpg" width="100" height="100"></button>
		<button onclick="stop(2)" id="2"><img id="gu"  src="j002.jpg" width="100" height="100"></button>
		<button onclick="stop(3)" id="3"><img id="tyoki"  src="j003.jpg" width="100" height="100"></button>
		<br/><button onclick="start()" class="start">start</button>
		<hr/>
		<div class="res">result:&nbsp</div><div id="rs" class="rs"></div>

    </body>
</html>